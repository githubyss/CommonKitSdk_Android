<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="true"
          android:state_pressed="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/comkitCommonBtnBgColorDefaultNormal" />
            <corners android:radius="@dimen/comkitCommonBtnCornerRadiusDefault" />
            <stroke android:width="@dimen/comkitCommonBtnStrokeWidthDefault"
                    android:color="@color/comkitCommonBtnStrokeColorDefault" />
        </shape>
    </item>

    <item android:state_enabled="true"
          android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/comkitCommonBtnBgColorDefaultPressed" />
            <corners android:radius="@dimen/comkitCommonBtnCornerRadiusDefault" />
            <stroke android:width="@dimen/comkitCommonBtnStrokeWidthDefault"
                    android:color="@color/comkitCommonBtnStrokeColorDefault" />
        </shape>
    </item>

    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/comkitCommonBtnBgColorDefaultDisabled" />
            <corners android:radius="@dimen/comkitCommonBtnCornerRadiusDefault" />
            <stroke android:width="@dimen/comkitCommonBtnStrokeWidthDefault"
                    android:color="@color/comkitCommonBtnStrokeColorDefault" />
        </shape>
    </item>
</selector>
