<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="comkitAppTheme"
           parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/comkitColorPrimary</item>
        <item name="colorPrimaryDark">@color/comkitColorPrimaryDark</item>
        <item name="colorAccent">@color/comkitColorAccent</item>
    </style>

    <!-- Translucent theme. -->
    <style name="comkitTranslucentTheme"
           parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@color/comkitLayoutBgColorTransparent</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
    </style>

    <!-- Translucent fullscreen theme. -->
    <style name="comkitTranslucentFullscreenTheme"
           parent="comkitTranslucentTheme">
        <item name="android:windowFullscreen">true</item>
    </style>


    <!-- Default common button style. -->
    <style name="comkitCommonBtnDefaultStyle">
        <item name="android:background">@drawable/comkit_btn_common_default</item>
        <item name="android:enabled">true</item>
        <item name="android:clickable">true</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@color/comkitCommonBtnTextColorDefault</item>
        <item name="android:textSize">@dimen/comkitCommonBtnTextSizeDefault</item>
    </style>

    <!-- Default common toggle button style. -->
    <style name="comkitCommonTglBtnDefaultStyle">
        <item name="android:background">@drawable/comkit_tgl_btn_common_default</item>
        <item name="android:enabled">true</item>
        <item name="android:checkable">true</item>
        <item name="android:checked">false</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@color/comkitCommonTglBtnTextColorDefault</item>
        <item name="android:textSize">@dimen/comkitCommonTglBtnTextSizeDefault</item>
    </style>

    <!-- Default common checkbox button style. -->
    <style name="comkitCommonChkBtnDefaultStyle">
        <item name="android:background">@drawable/comkit_chk_btn_common_default</item>
        <item name="android:enabled">true</item>
        <item name="android:checkable">true</item>
        <item name="android:checked">false</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@color/comkitCommonChkBtnTextColorDefault</item>
        <item name="android:textSize">@dimen/comkitCommonChkBtnTextSizeDefault</item>
    </style>

    <!-- Default common label style. -->
    <style name="comkitCommonLabelStyle">
        <item name="android:background">@color/comkitColorTransparent</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@color/comkitColorDarkslategray</item>
        <item name="android:textSize">@dimen/comkitTextSize16Sp</item>
    </style>

    <!-- Default common input style. -->
    <style name="comkitCommonInputStyle">
        <item name="android:background">@color/comkitColorTransparent</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@color/comkitColorChocolate</item>
        <item name="android:textSize">@dimen/comkitTextSize16Sp</item>
    </style>

    <!-- Default common text display style. -->
    <style name="comkitCommonTextDisplayStyle">
        <item name="android:background">@color/comkitColorTransparent</item>
        <item name="android:gravity">left</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@color/comkitColorDarkslategray</item>
        <item name="android:textSize">@dimen/comkitTextSize16Sp</item>
    </style>

    <!-- Common style. -->
    <style name="comkitCommonStyle">
    </style>

    <!-- Match parent style. -->
    <style name="comkitBothMatchParentStyle"
           parent="comkitCommonStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <!-- Wrap content style. -->
    <style name="comkitBothWrapContentStyle"
           parent="comkitCommonStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!-- Width match height wrap layout style. -->
    <style name="comkitOnlyWidthMatchParentLayoutStyle"
           parent="comkitCommonStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!-- Width wrap height match layout style. -->
    <style name="comkitOnlyHeightMatchParentLayoutStyle"
           parent="comkitCommonStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <!-- Arrange width using weight layout style. -->
    <style name="comkitArrangeWidthUsingWeightLayoutStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <!-- Arrange height using weight layout style. -->
    <style name="comkitArrangeHeightUsingWeightLayoutStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
    </style>

    <!-- Arrange in one row layout style. -->
    <style name="comkitArrangeInOneRowLayoutStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <!-- Arrange in one column layout style. -->
    <style name="comkitArrangeInOneColumnLayoutStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
    </style>
</resources>
