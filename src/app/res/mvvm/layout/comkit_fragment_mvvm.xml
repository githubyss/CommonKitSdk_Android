<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >

    <data>

        <import type="com.githubyss.mobile.common.kit.app.page.mvvm_binding.view_model.live_data.MvvmViewModelByLiveData" />

        <variable
            name="mvvmVm"
            type="MvvmViewModelByLiveData"
            />

        <!--<import type="com.githubyss.mobile.common.kit.app.page.mvvm.observable_field.MvvmViewModelObservableField" />-->

        <!--<variable-->
        <!--    name="mvvmVm"-->
        <!--    type="com.githubyss.mobile.common.kit.app.page.mvvm.observable_field.MvvmViewModelObservableField"-->
        <!--    />-->
    </data>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/comres_layoutBg_lightGray"
        android:fillViewport="true"
        android:scrollbars="none"
        >

        <com.google.android.flexbox.FlexboxLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="@dimen/comres_sideMargin_normal"
            android:paddingRight="@dimen/comres_sideMargin_normal"
            android:paddingBottom="@dimen/comres_sideMargin_normal"
            android:paddingLeft="@dimen/comres_sideMargin_normal"
            app:flexDirection="column"
            app:justifyContent="space_between"
            >

            <include
                android:id="@+id/layout_text"
                layout="@layout/comkit_view_mvvm_text"
                />

            <include
                android:id="@+id/layout_image"
                layout="@layout/comkit_view_mvvm_image"
                />

            <include
                android:id="@+id/layout_edittext"
                layout="@layout/comkit_view_mvvm_edittext"
                />


            <com.google.android.flexbox.FlexboxLayout style="@style/comres_equant_horizontal_flex_style">

                <Button
                    style="@style/comres_equant_horizontal_button_style"
                    android:id="@+id/button_switch_text"
                    android:onClick="@{() -> mvvmVm.onButtonSwitchTextClick()}"
                    android:text="@string/comkit_mvvm_button_switch_text"
                    />

                <Button
                    style="@style/comres_equant_horizontal_button_style"
                    android:id="@+id/button_switch_image"
                    android:onClick="@{() -> mvvmVm.onButtonSwitchImageClick()}"
                    android:text="@string/comkit_mvvm_button_switch_image"
                    />

                <Button
                    style="@style/comres_equant_horizontal_button_style"
                    android:id="@+id/button_switch_edittext"
                    android:onClick="@{() -> mvvmVm.onButtonSwitchEdittextClick()}"
                    android:text="@string/comkit_mvvm_button_switch_edittext"
                    />
            </com.google.android.flexbox.FlexboxLayout>
        </com.google.android.flexbox.FlexboxLayout>
    </androidx.core.widget.NestedScrollView>
</layout>
