<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="onClickPresenter"
            type="com.githubyss.mobile.common.kit.app.page.lifecycle.LifecycleNextFragment.OnClickPresenter"
            />
    </data>

    <LinearLayout
        android:background="@color/comres_layoutBg_lightGray"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        >

        <TextView
            style="@style/comres_tag_style_gray"
            android:id="@+id/text_binding_reflect"
            android:background="@color/comres_color_999999"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="Fragment Next"
            android:textColor="@color/comres_color_black"
            android:textSize="@dimen/comres_textSize_18sp"
            />

        <TextView
            style="@style/comres_tag_style_gray"
            android:id="@+id/text_back"
            android:background="@color/comres_color_999999"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:onClick="@{onClickPresenter::onBack}"
            android:text="Back"
            android:textColor="@color/comres_color_black"
            android:textSize="@dimen/comres_textSize_18sp"
            />
    </LinearLayout>
</layout>
